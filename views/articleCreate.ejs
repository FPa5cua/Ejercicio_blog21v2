<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Formulario Nuevo Usuario</title>
  </head>
  <body>
    <%-include("partials/nav")%>
    <div class="container mt-5">
      <div class="row d-flex justify-content-center">
        <div class="col-6 card border-0">
          <form action="/articulos" method="post" enctype="multipart/form-data" class="shadow mb-5 rounded">
            <h5 class="card-header p-3">Crear nuevo articulo</h5>
            <div class="mb-3 mt-3 px-4">
              <label for="title" class="form-label">TÃ­tulo</label>
              <input
                type="text"
                placeholder="Ingrese un tÃ­tulo..."
                class="form-control"
                name="title"
                id="title"
              />
            </div>
            <div class="mb-3 px-4">
              <label for="content" class="form-label">Contenido</label>
              <input
                type="text"
                placeholder="Ingrese el contenido..."
                class="form-control"
                name="content"
                id="content"
              />
            </div>
            <div class="mb-3 px-4">
              <label for="image" class="form-label">ImÃ¡gen</label>
              <input type="file" class="form-control" name="image" id="image" required />
            </div>
            <div class="mb-3 px-4">
              <select name="users" class="form-select" aria-label="Default select example" id="users">
                <option selected>Autor</option>
                <% for (const article of articles) { %>
                <option value="<%= article.user.id %>"><%= article.user.firstname %> <%= article.user.lastname %></option>
                <% } %>
              </select>
            </div>
            <button id="nuevoArticulo" type="submit" class="btn btn-success mx-4 mb-3">
              Guardar
            </button>
          </form>
          <div>
            <a class="d-block btn btn-secondary text-decoration-none" href="/articulos">ðŸ¢€ Volver</a>
          </div>
        </div>
      </div>
    </div>

    <%-include("partials/footer")%>
    <script src="https://kit.fontawesome.com/fefc105dd4.js" crossorigin="anonymous"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css">
    <title>Articles</title>
  </head>
  <body>
    <div class="container-fluid mt-5">
      <div class="row d-flex justify-content-center">
        <div class="col-10">
          <div class="d-flex justify-content-between align-items-center m-3">
            <h1>Articles</h1>
            <a href="/usuarios/crear" class="btn btn-success h-50">Nuevo</a>
          </div>

          <table id="table-article" class="table table-striped">
            <tr>
              <th class="col-1">Id</th>
              <th class="col-2">Title</th>
              <th id="content-col" class="col-4">Content</th>
              <th class="col-2">Image</th>
              <th class="col-1">Created at</th>
              <th class="col-1">Author</th>
              <th class="col-1">Actions</th>
            </tr>

            <% for (const article of articles){ %>
            <tr>
              <td><%=article.id%></td>
              <td><%=article.title%></td>
              <td class="content-col"><%=article.content%></td>
              <td>
                <img class="w-100 h-100" src="<%= article.image %>" alt="imagen<%=article.id %>" />
              </td>
              <td><%=article.createdat%></td>
              <td><%=article.author%></td>
              <td>
                <a href="/usuarios/editar/<%=article.id%>" class="btn btn-sm btn-primary">Editar</a
                ><a href="/usuarios/eliminar/<%=article.id%>" class="btn btn-sm btn-danger mt-1"
                  >Eliminar</a
                >
              </td>
            </tr>
            <%}%>
          </table>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
